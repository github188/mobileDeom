body{
    background-color: #fff;
}
input[placeholder] {
    color:#ccc;
}
.login-box{
    width: 450px;
    min-height: 400px;
    border: 1px solid #e5e5e5;
    box-shadow: 0 5px 8px #f4f4f4, 0 0 8px #f4f4f4, 0 0 8px #f4f4f4;
    margin: 100px auto;
    padding: 0 50px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}
.login-box .welcome-msg{
    font-size: 18px;
    line-height: 50px;
    text-align: center;
}
.login-box .tips-msg{
    line-height: 40px;
    text-align: center;
}
.login-box form input{
    width: 100%;
    height: 35px;
    border: 1px solid #e5e5e5;
    text-indent: 30px;
    color: #000;
    margin: 0 0 25px 0;
}
.login-box form .username{
    background-image: url("../images/user_icon.png");
    background-size: 22px 22px;
    background-repeat: no-repeat;
    background-position: 2px center;
}
.login-box form .mobile , .login-box form .password{
    background-image: url("../images/mobile_icon.png");
    background-size: 23px 20px;
    background-repeat: no-repeat;
    background-position: 2px center;
}
.login-box form .password{
    background-image: url("../images/pwd_icon.png");
    background-size: 23px 23px;
}

.login-box form .code-div{
    height: 37px;
    line-height: 37px;
    margin: 0 0 25px 0;
    border: 1px solid #e5e5e5;
    background-image: url("../images/verify_icon.png");
    background-size: 21px 21px;
    background-repeat: no-repeat;
    background-position: 2px center;
}

.login-box form .code-div input{
    width: 60%;
    margin: auto 0 auto 30px;
    height: 28px;
    text-indent: 0;
    vertical-align: middle;
    border:none;
    border-right: 1px solid #e5e5e5;
}
.login-box form .code-div .sendCode-btn{
    float: right;
    margin: auto 12px auto 0;
    color: #666;
    background-color: #fff;
    cursor: pointer;
    line-height: 37px;
}

.login-box form .link-div{
    line-height: 16px;
    text-align: right;
    margin-bottom: 10px;
}
.login-box form .link-div a{
    color: #ff6666;
}
.login-box form .link-div a:hover{text-decoration: underline;}


.login-box form .submit-btn{
    width: 100%;
    line-height: 40px;
    color: #fff;
    background-color: #ff6666;
    cursor: pointer;
    margin: 0 0 30px 0;
}
.login-box form .submit-btn:hover{
    background-color: #f65959;
}