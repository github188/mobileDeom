<!-- 头部 -->
<include file="Public:content-header" />
<div class="wrapper">
	<!-- 内容标题开始 -->
	<div id="breadcrumbs" class="breadcrumbs">
		<ol class="breadcrumb">
			<li><a href="#"><i class="fa fa-home"></i> 后台首页</a></li>
            <li><a href="#">网站内容</a></li>
            <li class="active">添加新消息</li>
		</ol>

	</div>
	<!-- 内容标题结束 -->

	<!-- 主要内容开始 -->
	<section class="content">
		<div class="row">

			<div class="col-xs-12">
				<div class="box box-info"> <!-- box-info天空蓝、 box-primary蓝色、  box-success绿色-->
					<div class="box-header nav-tabs">
						<h4 class="box-title"><i class="fa fa-plus"></i> 添加消息通知</h4>
						<!-- 返回上一页 -->
						<include file="Public:content-back" />
					</div>
					<!-- 表格开始 -->
					<div class="box-body">
						<form action="" method="post">
							<table id="example" class="table table-bordered">
								<tbody>

									<tr>
										<td class="table-td-right"> 消息分类：</td>
										<td>
											<select name="type" style="min-height: 30px;">
												<option value="0" >&nbsp;&nbsp;消息通知</option>
												<option value="4" >&nbsp;&nbsp;安全相关</option>
											</select>
										</td>
									</tr>
									<tr>
										<td class="table-td-right"> 标题：</td>
										<td><input type="text" name="title" class="form-control" size="30" data-rule="required"></td>
									</tr>

									<tr>
										<td class="table-td-right"> 内容：</td>
										<td>
											<textarea name="content" style="width: 266px;min-height: 100px;" data-rule="required"></textarea>
										</td>
									</tr>
									<tr height="60">
										<td colspan="2" align="center">
											<button class="btn btn-success" type="submit"><i class="fa fa-check"></i> 确定添加</button>
										</td>
									</tr>
								</tbody>
							</table>
						</form>	
					</div>
					<!-- 表格结束 -->

				</div>
			</div>

		</div>
	</section>
	<!-- 主要内容结束 -->
</div>
<!-- ./wrapper结束 -->

<!-- 底部 -->
<include file="Public:content-footer" />

<script>
	$(function(){
		$('.usergroup-selected').on('change',function(){
			if($(this).val()==0){
				$('.usergroup-checked').stop().hide(200);
			}else{
				$('.usergroup-checked').stop().show(500);
			}
		});
	});
</script>
