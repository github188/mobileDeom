<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>视频播放页面</title>
    <link rel="stylesheet" href="__MEMBER__/css/base.css">
</head>
<body>
<script src='//player.polyv.net/script/polyvplayer.min.js'></script>
<!-- 视频播放 -->
<div class="play_box" id='plv_{$video_code}'></div>
<script>
    //视频播放参数
    var player = polyvObject('#plv_{$video_code}').videoPlayer({
        'width':'750',
        'height':'450',
        'vid' : '{$video_code}'
    });
</script>
</body>
</html>