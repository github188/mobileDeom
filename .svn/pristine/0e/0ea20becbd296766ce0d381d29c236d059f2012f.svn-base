<!-- 头部 -->
<include file="Public:content-header" />
<!-- 百度编辑器ueditor -->
<script type="text/javascript" charset="utf-8" src="__STATIC__/plugins/ueditor/ueditor.config.js"></script> 
<script type="text/javascript" charset="utf-8" src="__STATIC__/plugins/ueditor/ueditor.all.min.js"></script> 
<script type="text/javascript" src="__STATIC__/plugins/ueditor/lang/zh-cn/zh-cn.js"></script>  
<style type="text/css">
.table-td-right {
    color: #555;
    letter-spacing: 0.2em;
    text-align: right;
    width: 15%;
}
</style>

<script type="text/javascript">
	//实例化编辑器 
	window.UEDITOR_HOME_URL = "__STATIC__/plugins/ueditor/";
	var ue = UE.getEditor('editor_content', {
	    // autoHeightEnabled: true, //是否自动长高
	    // autoFloatEnabled: true, //是否保持toolbar的位置不动
	    initialFrameHeight: 500, //编辑器的高度
	    //initialFrameWidth: 1000, //编辑器的宽度
	    serverUrl: "{:U(MODULE_NAME.'/Article/uploadArticle')}" 
	});

</script>
<div class="wrapper">
	<!-- 内容标题开始 -->
	<div id="breadcrumbs" class="breadcrumbs">
		<ol class="breadcrumb">
			<li><a href="#"><i class="fa fa-home"></i> 后台首页</a></li>
			<li><a href="#">微信管理</a></li>
			<li class="active">修改文章</li>
		</ol>
	</div>
	<!-- 内容标题结束 -->

	<!-- 主要内容开始 -->
	<section class="content">
		<div class="row">

			<div class="col-xs-12">
				<div class="box box-info">
					<div class="box-header nav-tabs">
						<h4 class="box-title">修改微信自动回复文章</h4>
						<!-- 返回上一页 -->
						<include file="Public:content-back" />
					</div>
					<!-- 表格开始 -->
					<div class="box-body">
						<form action="{:U(MODULE_NAME.'/Wechat/editWechatArticle')}" method="post">  
							<table id="example" class="table table-bordered">
								<tbody>
									<tr>
										<td class="table-td-right"> 文章标题：</td>
										<td><input type="text" name="title" value="{$arr.title}" class="form-control" size="50" data-rule="required"></td>
									</tr>
									<tr>
										<td class="table-td-right"> 文章描述：</td>
										<td><textarea name="description" rows="4" cols="50"> {$arr.description}</textarea></td>
									</tr>
									<tr>
										<td class="table-td-right"> 链接地址：</td>
										<td><input type="text" name="url" value="{$arr.url}" class="form-control" size="50" data-rule="required;"> *URL</td>
									</tr>
									<tr>
										<td class="table-td-right"> 封面图片：</td>
										<td><input type="text" name="img_url" value="{$arr.img_url}" class="form-control" size="50" data-rule="required;"> *URL</td>
									</tr>
									<tr>
										<td class="table-td-right"> 显示状态：</td>
										<td>
						                    显示 <input type="radio" name="status" id="iCheck1" value="0" checked> &nbsp;
						                    隐藏 <input type="radio" name="status" id="iCheck2" value="1">
										</td>
									</tr>
									<tr>
										<td class="table-td-right"> 文章内容：</td>
										<td>
										<textarea name="content" id="editor_content" style="width:95%;" data-rule="required">{$arr.content|htmlspecialchars_decode=###}</textarea>
										</td>
									</tr>
									<tr height="60">
										<td colspan="2" align="center">
											<input type="hidden" name="aid" value="{$arr.id}">
											<button class="btn btn-success" type="submit"><i class="fa fa-check"></i> 确定修改文章</button>
										</td>
									</tr>
								</tbody>
							</table>
						</form>	
					</div>
					<!-- 表格结束 -->

				</div>
			</div>

		</div>
	</section>
	<!-- 主要内容结束 -->
</div>
<!-- ./wrapper结束 -->

<!-- 底部 -->
<include file="Public:content-footer" />

