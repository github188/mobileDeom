<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="format-detection" content="telephone=no">
    <meta name="screen-orientation" content="portrait">
    <meta name="x5-orientation" content="portrait">
    <meta name="full-screen" content="yes">
    <meta name="x5-fullscreen" content="true">
    <meta name="browsermode" content="application">
    <meta name="x5-page-mode" content="app">
    <title>嗨推学院-知名网络推广实战培训平台</title>
    <link rel="stylesheet" href="__MOBILE__/css/base.css">
    <link rel="stylesheet" href="__MOBILE__/css/common.css">
    <link rel="stylesheet" href="__MOBILE__/css/style.css">
</head>
<body style="background-color: #fff;">

<!--myWithdraw-->
<section class="myWithDet">
    <div class="in">
        <div class="withHd">
            <h3 class="tit">
                <em class="money">{$data['money']}</em>元
            </h3>
            <if condition="$data['ratify_status'] EQ 0">
                <p>等待审核</p>
            <elseif condition="$data['ratify_status'] EQ 1"/>
                <p>交易成功</p>
            <elseif condition="$data['ratify_status'] EQ 2"/>
                <p>交易失败</p>
            </if>

        </div>

        <if condition="$data['ratify_status'] EQ 0">
            <!--处理中-->
            <div class="withRate">
                <div class="tp">
                    <img src="__MOBILE__/images/rate02.png">
                </div>
                <div class="txt">
                    <div class="tx01">
                        <span>提交申请</span>
                        <!--<span>{:date('m-d H:i',$data['addtime'])}</span>-->
                    </div>
                    <div class="tx02 cur">
                        <span>处理中</span>
                        <!--<span></span>-->
                    </div>
                    <div class="tx03">
                        <span>提现成功</span>
                    </div>
                </div>
            </div>
         <elseif condition="$data['ratify_status'] EQ 1"/>
            <!--提现成功-->
            <div class="withRate">
                <div class="tp">
                    <img src="__MOBILE__/images/rate03.png">
                </div>
                <div class="txt">
                    <div class="tx01">
                        <span>提交申请</span>
                    </div>
                    <div class="tx02">
                        <span>处理中</span>
                    </div>
                    <div class="tx03 cur">
                        <span>提现成功</span>
                    </div>
                </div>
            </div>
         <elseif condition="$data['ratify_status'] EQ 2"/>
            <!--提现失败-->
            <div class="withRate">
                <div class="tp">
                    <img src="__MOBILE__/images/rate02.png">
                </div>
                <div class="txt">
                    <div class="tx01">
                        <span>提交申请</span>
                        <!--<span>{:date('m-d H:i',$data['addtime'])}</span>-->
                    </div>
                    <div class="tx02">
                        <span>处理中</span>
                        <!--<span></span>-->
                    </div>
                    <div class="tx03 cur">
                        <span>提现失败</span>
                    </div>
                </div>
            </div>
        </if>


        <div class="reList">
            <ul>
                <li>
                    <span class="tl">转出说明</span>
                    <span class="tr">佣金提现</span>
                </li>
                <li>
                    <span class="tl">转入账户</span>
                    <span class="tr">{:getBankType($data['type'])}  ({:substr($data['number'],-4,4)})</span>
                </li>
                <li>
                    <span class="tl">申请时间</span>
                    <span class="tr">{:date('Y-m-d H:i',$data['addtime'])}</span>
                </li>
                <if condition="$data['ratify_status'] NEQ 0 && $data['ratify_time']">
                    <li>
                        <span class="tl">审核时间</span>
                        <span class="tr">{:date('Y-m-d H:i',$data['ratify_time'])}</span>
                    </li>
                </if>
                <li>
                    <span class="tl">备注说明</span>
                    <span class="tr">{$data['ratify_remark']?$data['ratify_remark']:'无'}</span>
                </li>
            </ul>
        </div>
    </div>
</section>

<script src="__MOBILE__/js/zepto_plus.js"></script>
<script src="__MOBILE__/js/base.js"></script>
<script src="__MOBILE__/js/style.js"></script>

</body>
</html>