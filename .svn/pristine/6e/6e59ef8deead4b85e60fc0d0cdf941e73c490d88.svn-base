
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="screen-orientation" content="portrait">
    <meta name="x5-orientation" content="portrait">
    <meta name="full-screen" content="yes">
    <meta name="x5-fullscreen" content="true">
    <meta name="browsermode" content="application">
    <meta name="x5-page-mode" content="app">
    <title>嗨推学院-知名网络推广实战培训平台</title>
    <link rel="stylesheet" href="//at.alicdn.com/t/font_pa4jl08eia6mvx6r.css">
    <link rel="stylesheet" href="__MOBILE__/css/base.css">
    <link rel="stylesheet" href="__MOBILE__/css/common.css">
    <link rel="stylesheet" href="__MOBILE__/css/main.css">
    <link rel="stylesheet" href="__MOBILE__/css/style.css">
</head>
<body class="bgcC">

<include file="Public:topMenu"/>

<!--背景图-->
<setion class="img">
    <img src="__MOBILE__/images/banTp.jpg" alt="">
</setion>

<!--主要内容-->
<setion class="mianCont">
     <div class="contHear">
        <ul class="clearfix">
            <volist name="pidCategory" key="k" id="v">
                <li {$pid==$v['id']?'class="cur"':''} onclick="location.href = '{:U(\'Video/videoCategory\',array(\'pid\'=>$v[\'id\']))}';">{$v['name']}</li>
            </volist>
        </ul>
     </div>

    <!--试听课程-->
    <div class="swipe show">
        <ul>
            <volist name="videoCategory" key="k" id="v">
                <li>
                    <a  href="{:U('Video/play',array('category_id'=>$v['id']))}">
                        <div class="Himg"> <i class="iconfont {$v['allow_play']==1?'icon-cur-eye':'icon-cur-lock'}"></i> </div>
                        <div class="study fr">
                            <p class="pp">{$v['name']}</p>
                            <div class="progess">
                                <div class="maxPro">
                                    <p class="curPro" style="width: {$v['progress']}%;"></p>
                                </div>
                                <span class="proNum">{$v['progress']}%</span>
                            </div>
                        </div>
                        <div class="hArrow"><span class="arows"></span><span class="arows"></span></div>
                    </a>
                </li>
            </volist>
        </ul>
    </div>
</setion>

<include file="Public:footer"/>

<script src="__MOBILE__/js/menuSilder.js"></script>
<script src="__MOBILE__/js/theMenu.js"></script>