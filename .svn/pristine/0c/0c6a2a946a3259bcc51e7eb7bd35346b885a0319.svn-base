<!-- 头部 -->
<include file="Public:content-header" />

<div class="wrapper">
	<!-- 内容标题开始 -->
	<div id="breadcrumbs" class="breadcrumbs">
		<ol class="breadcrumb">
			<li><a href="#"><i class="fa fa-home"></i> 后台首页</a></li>
            <li><a href="#">栏目管理</a></li>
            <li class="active">修改分类</li>
		</ol>

	</div>
	<!-- 内容标题结束 -->

	<!-- 主要内容开始 -->
	<section class="content">
		<div class="row">

			<div class="col-xs-12">
				<div class="box box-info"> <!-- box-info天空蓝、 box-primary蓝色、  box-success绿色-->
					<div class="box-header nav-tabs">
						<h4 class="box-title"><i class="fa fa-pencil"></i> 修改栏目分类</h4>
						<!-- 返回上一页 -->
						<include file="Public:content-back" />
					</div>
					<!-- 表格开始 -->
					<div class="box-body">
						<form action="{:U(MODULE_NAME.'/Category/editCate', array('gid' => $gid))}" method="post">  
							<table id="example" class="table table-bordered">
								<tbody>
									<tr>
										<td class="table-td-right"> 栏目名称：</td>
										<td><input type="text" name="name" value="{$cate.name}" class="form-control" size="30" data-rule="required"></td>
									</tr>
									<tr>
										<td class="table-td-right"> 显示状态：</td>
										<td>
											显示 <input type="radio" name="status" id="iCheck1" value="0" <if condition="!$cate['status']">checked</if>> &nbsp;
											隐藏 <input type="radio" name="status" id="iCheck2" value="1" <if condition="$cate['status']">checked</if>>
										</td>
									</tr>
									<tr>
										<td class="table-td-right"> 栏目排序：</td>
										<td><input type="text" name="sort" value="{$cate.sort}" class="form-control" size="30" data-rule="required;digits"></td>
									</tr>

									<tr height="60">
										<td colspan="2" align="center">
											<input type="hidden" name="cid" value="{$cate.id}">
											<button class="btn btn-success" type="submit"><i class="fa fa-check"></i> 确定修改</button>
										</td>
									</tr>
								</tbody>
							</table>
						</form>	
					</div>
					<!-- 表格结束 -->

				</div>
			</div>

		</div>
	</section>
	<!-- 主要内容结束 -->
</div>
<!-- ./wrapper结束 -->

<!-- 底部 -->
<include file="Public:content-footer" />